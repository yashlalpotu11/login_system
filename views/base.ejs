
<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-3">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Login for existing user</span>
            <% if(locals.logout){%>
                <div class="alert alert-success text-center">
                    <%= logout %>
                </div>
            <%} %>
        </div>
        <form action="/route/login" method="POST" class="pt-1">
            <div class="form-group mb-4">
                <input type="email" name="email" class="form-control" placeholder="email">
                <!-- <small class="form-text text-muted text-center">Register email address</small> -->
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="password">
            </div>
            <button type="submit" class="btn btn-success mt-3 rounded-pill" >Submit</button>
        </form>
    </div>
</div>

<%- include('footer') -%>